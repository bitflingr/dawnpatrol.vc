/* Dev Mode ================= */
#wpadminbar {
  display: none;
}
html {
    margin-top: 0px !important;
}

/* Fonts & Typography ================= */
@import url(https://fonts.googleapis.com/css?family=Monda:400,700);
@import url(https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,200,300,600,700,900);

body {
  font-family: 'Monda', sans-serif;
  background: #7c8186;
	/* background: #e3a518; */
}

h1 {
  font-size: 4.8em;
  line-height: 1.1em;
}
.thin {
  font-family: 'Source Sans Pro', sans-serif;
  font-weight: 200;
}

.subtitle {
  font-weight: 200;
  padding: 10px 30px;
  background: rgba(255,255,255,.6);
  color: rgba(0,0,0,.5);
  float: left;
  -webkit-border-radius: 2px;	
          border-radius: 2px;	
}

.sub_yellow {
  background: rgba(248,175,9,.6);
  color: #fff;
}


/* elements ================= */
.circle {
  -webkit-border-radius: 50%;	
          border-radius: 50%;	
}
.btn {
  border-width: 0px;    
  -webkit-box-shadow: inset 0 2px 0 rgba(255,255,255,.2), 0 3px 1px rgba(0,0,0,0.07);
  -moz-box-shadow: inset 0 2px 0 rgba(255,255,255,.2), 0 3px 1px rgba(0,0,0,.07);
  box-shadow: inset 0 2px 0 rgba(255,255,255,.2), 0 3px 1px rgba(0,0,0,.07);
}
.btn-primary {
  background-color: #e3a518;
  background-image: none;
}
.btn-primary:hover {
  background-color: #d39914;
}
.btn-large {
  padding: 16px 24px;
  font-size: 24px;
}

/* ONE PAGE ================= */
.bgImage,
.bgImage_new {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-size: cover;
  background-repeat: no-repeat;
}
.bgImage {
  z-index: 0;
}
.bgImage_new {
  z-index: 1;
}
#fullpage {
  color: #fff;
  z-index: 2;
  position: relative;
}
.section{
  background-size: cover;
  background-repeat: no-repeat;

}

header {
  background: rgba(0,0,0,.65);
	position:fixed;
	top:0;
	left:0;
	height: 44px;
	z-index: 70;
	width: 100%;
}
#currentSection {
  display: none;
}

#menu li {
	display:inline-block;
	margin: 0 20px 0 0;
}
#menu li.active a {
	border-bottom: 2px solid #e3a518;
	color: #fff;
}
#menu li a{
	text-decoration:none;
	color: rgba(255,255,255,.7);
	font-size: 15px;
}
#menu li.active a:hover{
	//color: #000;
}
#menu li:hover{
}
#menu li a,
#menu li.active a{
	padding: 12px 0 4px;
	display:block;
}
#menu li.active a{
	color: #fff;
}
#menu{
	position: relative;
	padding: 0;
	margin:0;
}

/* Line Up ---------------- */
#section2 h1 {
  margin-bottom: 40px;
}
#section2 .circle {
  float: left;
  width: 25%;
}
#section2 .name,
#section2 .title {
  margin-left: 30%;
}
#section2 h2.thin {
  margin-bottom: 5px;
  font-size: 42px;
}
#section2 h4.title {
  margin-top: 0px;
  color: #333;
}
#section2 p {
  color: #333;
  font-size: 16px;
  line-height: 22px;
  margin-top: 10px;
}
.borderTop {
  border-top: 1px solid #333;
  margin-top: 22px;
}
.verizon_logo {
  height: 20px;
  margin: -9px 0 0;
}
.aol_logo {
  height: 18px;
  margin: -9px 0 0;
}
.lineup_footer {
  margin-top: 20px;
}
.lineup_logos {
  padding: 20px 0 80px;
}

/* Our Approach ---------------- */
#section4 small {
  color: #fff;
}
#section4 h2.subtitle.sub_yellow {
  position: relative;
  margin: 0 0 30px 40px;
  padding: 20px 40px 20px 60px;
  line-height: 40px;
  vertical-align: middle;
}
#section4 img {
  position: absolute;
  top: 0px;
  left: -40px;
  height: 80px;
}
#section4 h3.thin {
  margin-top: 20px;
}

